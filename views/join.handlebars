<!-- 3rdWheel -->
<div id="home">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-none">
          <a class="navbar-brand" href="/">3RDWheel</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
            aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Sign in -->
          <div class="collapse navbar-collapse" id="navbarText">
            <div class="col-4 offset-8 text-right">
              <a data-toggle="modal" href="#signupModal" class="navbar-text mr-5" id="sign">sign up</a>
              <div class="modal fade" id="signupModal" role="dialog">
                <div class="modal-dialog">
                  <!-- Modal -->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 style="color:green;"><span class="glyphicon glyphicon-lock"></span></h4>
                    </div>
                    <div class="modal-body">
                      <form role="form">
                        <div class="form-group">
                          <label for="usrname"><span class="glyphicon glyphicon-user"></span>create username</label>
                          <input type="text" class="form-control" id="usrname" placeholder="enter user">
                        </div>
                        <div class="form-group">
                          <label for="psw"><span class="glyphicon glyphicon-eye-open"></span>create password</label>
                          <input type="text" class="form-control" id="psw" placeholder="enter password">
                        </div>
                        <button type="submit" class="btn btn-default btn-success btn-block"><span
                            class="glyphicon glyphicon-off"></span>login</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Login -->
            <a data-toggle="modal" href="#loginModal" class="navbar-text">log in</a>
            <div class="modal fade" id="loginModal" role="dialog">
              <div class="modal-dialog">
                <!-- Modal -->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 style="color:green;"><span class="glyphicon glyphicon-lock"></span></h4>
                  </div>
                  <div class="modal-body">
                    <form role="form">
                      <div class="form-group">
                        <label for="usrname"><span class="glyphicon glyphicon-user"></span> username</label>
                        <input type="text" class="form-control" id="usrname" placeholder="enter user">
                      </div>
                      <div class="form-group">
                        <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> password</label>
                        <input type="text" class="form-control" id="psw" placeholder="enter password">
                      </div>
                      <button type="submit" class="btn btn-default btn-success btn-block"><span
                          class="glyphicon glyphicon-off"></span>login</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </div>
    <!-- Post Form -->
    {{#each hangouts}}
    <div class="card">
      <div class="card-header">
        {{date}}
      </div>
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p>{{location}}</p>
        <small>{{category}}</small>
        <p class="card-text">{{details}}</p>
        <a href="#" data-id={{id}} class="btn btn-primary">Tag Along</a>
      </div>
    </div>
    {{/each}}


    <footer class="footer">&copy;3rdWheel 2019</footer>